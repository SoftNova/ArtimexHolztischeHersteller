{% block head %}
    <!-- Header area -->
    {% include 'client/statics/header.html.twig' %}
    <!-- End of header area -->
{% endblock %}
<div class="product-big-title-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="product-bit-title text-center">
                    <h2>{% trans %}app.checkout{% endtrans %}</h2>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="col-md-8 col-xs-12">
    <div class="row">
        <div class="col-md-12">
            <div class="well well-sm">
                <form class="form-horizontal" method="post" action="{{ path ("_cart_checkout_submit") }}">
                    <fieldset>
                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-user bigicon"></i></span>
                            <div class="col-md-8">
                                <input required="required" id="fname" name="fname" type="text" placeholder="{{ 'app.input.first.name' |trans }}" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-user bigicon"></i></span>
                            <div class="col-md-8">
                                <input required="required" id="lname" name="lname" type="text" placeholder="{{ 'app.input.last.name' |trans }}" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-phone-square bigicon"></i></span>
                            <div class="col-md-8">
                                <input required="required" id="phone" name="phone" type="text" placeholder="{{ 'app.input.phone' |trans }}" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-map-o bigicon"></i></span>
                            <div class="col-md-8">
                                <input required="required" id="address1" name="address1" type="text" placeholder="{{ 'app.input.address.one' |trans }}" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-map-o bigicon"></i></span>
                            <div class="col-md-8">
                                <input id="address2" name="address2" type="text" placeholder="{{ 'app.input.address.two' |trans }}" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-map-marker bigicon"></i></span>
                            <div class="col-md-8">
                                <input required="required" id="state" name="state" type="text" placeholder="{{ 'app.input.state' |trans }}" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-map-marker bigicon"></i></span>
                            <div class="col-md-8">
                                <input required="required" id="city" name="city" type="text" placeholder="{{ 'app.input.city' |trans }}" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-suitcase bigicon"></i></span>
                            <div class="col-md-8">
                                <input id="company" name="company" type="text" placeholder="{{ 'app.input.company' |trans }}" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-registered bigicon"></i></span>
                            <div class="col-md-8">
                                <input  id="regcode" name="regcode" type="text" placeholder="{{ 'app.input.company.reg.code' |trans }}" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-envelope-o bigicon"></i></span>
                            <div class="col-md-8">
                                <input required="required" id="postalCode" name="postalCode" type="text" placeholder="{{ 'app.input.postal.code' |trans }}" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-pencil-square-o bigicon"></i></span>
                            <div class="col-md-8">
                                <input required="required" id="email" name="email" type="text" placeholder="{{ 'app.input.email' |trans }}" class="form-control">
                            </div>
                        </div>


                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-commenting bigicon"></i></span>
                            <div class="col-md-8">
                                <textarea class="form-control" id="comment" name="comment" placeholder="{{ 'app.input.comments' |trans }}" rows="7"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12 text-center">
                                <button type="submit" class="btn btn-primary btn-lg">{{ 'app.checkout' | trans }}</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
    <div class="col-xs-12 col-md-4">
        <div class="row">
            <div class="col-xs-12">
                <div class="cart-summary" id="grand-total">
                    <div class="row">
                        <h4>{% trans %} app.order.summary{% endtrans %}</h4>
                    </div>
                    <div class="row">
                        <div class="col-xs-4 col-md-5 pull-left">
                            <span><label>{% trans %} app.products.total{% endtrans %}</label></span>
                        </div>
                        <div class="col-xs-8 col-md-7 pull-right">
                            <p>{{ 'app.currency' |trans }}{{ oCart.totalPrice }}</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-4 col-md-5">
                            <span><label>{% trans %} app.transport.cost{% endtrans %}</label></span>
                        </div>
                        <div class="col-xs-8 col-md-7">
                            <p class="text-success"><strong>FREE</strong></p>
                        </div>
                    </div>
                    <div class="row">
                        <hr>
                    </div>
                    <div class="row">
                        <h2>
                            {% trans %} app.grand.total{% endtrans %}
                        </h2>
                        <h2>
                            {{ 'app.currency' |trans }}{{ oCart.totalPrice }}
                        </h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% block footer %}
    <!-- Start of footer area -->
    {% include '/client/statics/footer.html.twig' %}
    <!-- End of footer area -->
{% endblock %}