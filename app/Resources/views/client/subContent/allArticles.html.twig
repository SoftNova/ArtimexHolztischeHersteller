{% if aArticles %}
    {% for oItem in aArticles %}
        <div class="col-sm-6 col-lg-4 itemDisplay">
            <div class="row col-sm-12">
                <p class="itemDisplayName text-center aligncenter">{{ oItem.name }}</p>
            <span>
                <div class="single-product">
                    <div class="product-f-image">
                        <img class="center-block img-responsive" id="primaryImageDisplay"
                             src="{{ oItem.primaryImage | imagine_filter('primaryImage') }}">
                        <div class="product-hover">
                        <a href="{{ path('_specificArticle', { 'name' : oItem.name, 'code' : oItem.code}) }}"
                           class="add-to-cart-link"><i class="fa fa-shopping-cart"></i>{{ 'app.show' | trans }}</a>
                        </div>
                    </div>
                </div>
            </span>
            </div>
            <div class="col-sm-12 row">
                <hr>
            </div>
            {{ oItem.price }}
        </div>
    {% endfor %}
{% endif %}