                        </div>
                    </div>

                    <div class="row col-xs-12">
                        <div class="well col-xs-12 white-background">
                            <div class="form-group" id="payment-method-wrapper">
                                {% form_theme form ':form:choice_widget.html.twig' %}
                                {{ form_widget(form.clientPaymentMethod) }}
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>
