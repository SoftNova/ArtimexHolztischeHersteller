    <div class="row">
        <div class="col-md-12">
            <div class="well well-sm">
                <fieldset>
                    <div class="row bottom-padding-3x">
                        <div class="col-xs-12 inline">
                            <div class="col-xs-1">
                                <span class="circle-icon white-text">2</span>
                            </div>
                            <div class="col-xs-11 pull-left">
                                <h4>{{ 'app.payment.method' | trans }}</h4>
