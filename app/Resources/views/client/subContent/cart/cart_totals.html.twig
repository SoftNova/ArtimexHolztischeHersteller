<div class="row">
    <div class="col-xs-12">
        <div class="cart-summary" >
            <div class="row">
                <h4>{% trans %} app.order.summary{% endtrans %}</h4>
            </div>
            <div class="row">
                <div class="col-xs-12 col-md-5 pull-left">
                    <span><label>{% trans %} app.products.total{% endtrans %}</label></span>
                </div>
                <div class="col-xs-12 col-md-7 pull-right">
                    <p>{{ 'app.currency' |trans }}{{ oCart.totalPrice }}</p>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 col-md-5">
                    <span><label>{% trans %} app.transport.cost{% endtrans %}</label></span>
                </div>
                <div class="col-xs-12 col-md-7">
                    <p class="text-success"><strong>FREE</strong></p>
                </div>
            </div>
            <div class="row">
                <hr>
            </div>
            <div class="row">
                <h2>
                    {% trans %} app.grand.total{% endtrans %}
                </h2>
                <h2 id="cartGrandTotal" data-grt="{{ oCart.totalPrice }}" data-cur="{{ 'app.currency' |trans }}">
                    {{ 'app.currency' |trans }}{{ oCart.totalPrice }}
                </h2>
            </div>

        </div>
    </div>
</div>