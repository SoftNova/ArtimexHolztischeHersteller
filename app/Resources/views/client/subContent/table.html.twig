{% extends ':client:products.html.twig' %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-sm-5">
                <img src="{{oItem.primaryImage(primaryMaterial) | imagine_filter('productDisplay')}}"/>
                <p>{{ oItem.description }}</p>

                <!-- start of custom message -->
                {% if oItem.message is not null %}
                    <div class="row">
                        <hr>
                    </div>
                    <p><strong>
                            {{ oItem.message }}
                        </strong></p>
                {% endif %}
                <!-- end of custom message -->
            </div>
            <div class="col-sm-3">
                {% include ':client/subContent:dynamicSpecs.html.twig' %}
            </div>
            <div class="col-sm-4">
                {% include ':client/subContent:configurations.html.twig' %}
            </div>
        </div>
    </div>
{% endblock %}