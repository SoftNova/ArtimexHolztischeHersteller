{% extends ':client:products.html.twig' %}

{% block content %}
    <div class="container imageOver">
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-5">
                <div id="loadImageDiv" data-path="{{ path ('_getPrimaryImageByMaterial') }}">
                    <img class="ajax-loader img-responsive" src="{{ asset('bundles/app/img/loading.gif') }}"/>
                    <img id="displayImage" src="{{oItem.primaryImage(primaryMaterial) | imagine_filter('productDisplay')}}"/>
                </div>
                <br><br>
                <div class="photos">


                        {% for secImage in oItem.secondaryImages %}

                            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                                <a class="example-image-link" href="{{ secImage | imagine_filter('productDisplayLightbox') }}" data-lightbox="example-set" data-title="photo ex"><img src="{{ secImage | imagine_filter('productImages') }}"></a>
                            </div>

                        {% endfor %}

                </div>
                <br><br>
                <p>{{ oItem.description }}</p>
                <div class="row">
                    <hr>
                </div>


                <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-body">
                            </div>
                        </div><!-- /.modal-content -->
                    </div><!-- /.modal-dialog -->
                </div><!-- /.modal -->


                <!-- start of custom message -->
                {% if oItem.message is not null %}
                <p><strong>{{  oItem.message }}</strong></p>
                {% endif %}
                <!-- end of custom message -->
            </div>
            <div class="col-xs-12  col-sm-6 col-md-3">
                {% include ':client/subContent:dynamicSpecs.html.twig' %}
            </div>
            <div class="col-xs-12 col-sm-12 col-md-4" id="config">
                {% include ':client/subContent:configurations.html.twig' %}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bundles/app/js/tablePriceCalculationHandler.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/app/js/mouseOverDisplayMaterialImage.js') }}" type="text/javascript"></script>
{% endblock %}

