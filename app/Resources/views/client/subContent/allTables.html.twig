{% if aTables %}
    {% for oItem in aTables %}
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 itemDisplay">
            <div class="row">
            <span>

                <p class="itemDisplayName aligncenter">{{ oItem.name }}</p>
                <div class="single-product">
                    <div class="product-f-image">
                        <img class="img-responsive" id="primaryImageDisplay"
                        src="{{ oItem.primaryImage(primaryMaterial) | imagine_filter('primaryImage') }}">
                        <div class="product-hover">
                            <a href="{{ path('_specificTable', { 'name' : oItem.name, 'code' : oItem.code}) }}" class="add-to-cart-link"><i class="fa fa-shopping-cart"></i> Configure</a>
                        </div>
                    </div>
                </div>

            </span>

            </div>
            <div class="row">
                <hr>
            </div>
        </div>
    {% endfor %}
{% endif %}
