{% extends ':client:categoryItems.html.twig' %}

{% block content %}
    <div class="container imageOver">
        <div class="hidden" data-code="{{ oItem.code }}" id="dynamicIdDiv"></div>
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-5">
            <div class="row">
                <div id="loadImageDiv">
                    <a class="example-image-link"
                       href="{{ oItem.primaryImage() | imagine_filter('productDisplayLightbox') }}"
                       data-lightbox="example-set" data-title="">
                        <img id="displayImage" class="img-responsive"
                             src="{{ oItem.primaryImage() | imagine_filter('productDisplay') }}"/></a>
                </div>
            </div>
            <div class="row">
                <div class="photos">
                    {% for secImage in oItem.secondaryImages %}
                        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-3 secondary-images">
                            <a class="example-image-link"
                               href="{{ secImage | imagine_filter('productDisplayLightbox') }}"
                               data-lightbox="example-set" data-title=""><img
                                        src="{{ secImage | imagine_filter('productImages') }}"></a>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="row">
                <hr>
            </div>
            <div class="row">
                <span>{{ oItem.description|raw }}</span>
            </div>
            <div class="row">
                <hr>
            </div>
        </div>
        <div class="col-xs-12  col-sm-6 col-md-6 col-lg-3" id="loadContentDiv">
            <div class="col-xs-12" id="dynamicPriceSubDiv">
             <span id="dynamicPriceSpan">
                <small class="col-xs-5 glyphicon-object-align-bottom">{% trans %}app.vat.included{% endtrans %}</small>
                <button class="btn btn-cart col-xs-5" id="addToCartButton" name="cartButton">{% trans %} app.add.to.cart{% endtrans %}</button>
            </span>
            <span id="dynamicErrorSpan">
            </span>
            </div>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-4" id="config">

        </div>
    </div>
{% endblock %}


{% block javascripts %}
    <script type="text/javascript">
        var locale = '{{ app.request.locale }}';
        var cartTrs = '{{ 'app.cart' | trans }}';
        var currencyTrs = '{{ 'app.currency'|trans }}';
        var imgPath = '{{ asset('bundles/app/img/loading.gif') }}';
    </script>
    <script src="{{ asset('bundles/app/js/cartScripts/articleScripts/articlePriceCalculationHandler.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/app/js/cartScripts/articleScripts/addArticleToCart.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/app/js/mouseOverDisplayMaterialImage.js') }}" type="text/javascript"></script>
{% endblock %}
