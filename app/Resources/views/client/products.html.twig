{% block head %}
    <!-- Header area -->
    {% include 'client/statics/header.html.twig' %}
    <!-- End of header area -->
{% endblock %}
{% block subnenu %}
    <!-- subnav here -->
    {% if aCategories is not null %}
        <div class="navbar navbar-default opaque-navbar">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navMain">
                        <span class="glyphicon glyphicon-chevron-right" style="color:white;"></span>
                    </button>
                </div>
                <div class="collapse navbar-collapse" id="navMain">
                    <ul class="nav navbar-nav pull-left">
                        {#<li><a href="{{ path('_allArticles') }}">{% trans %}app.all.products{% endtrans %}</a></li>#}
                        {% for oCategory in aCategories %}
                            <li>
                                <a href="{{ path('_allCategoryItems', {'id': oCategory.id, 'name' : oCategory.name }) }}">{{ oCategory.name }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    {% endif %}


{% endblock %}
{% block content %}
<ul class="list-inline">
    <div class="single-product-area">
        <div class="zigzag-bottom"></div>
        <div class="container">
            <div class="row">
                {% if aTables %}
                    {% for oItem in aTables %}
                        <div class="col-sm-6 col-lg-4 itemDisplay">
                            <div class="row col-sm-12">
                                <p class="itemDisplayName text-center aligncenter">{{ oItem.name }}</p>
                                <span>
                                    <div class="single-product">
                                        <div class="product-f-image">
                                            <img class="center-block img-responsive" id="primaryImageDisplay"
                                                 src="{{ oItem.primaryImage(primaryMaterial) | imagine_filter('primaryImage') }}">
                                            <div class="product-hover">
                                            <a href="{{ path('_specificTable', { 'name' : oItem.name, 'code' : oItem.code}) }}"
                                               class="add-to-cart-link"><i class="fa fa-shopping-cart"></i>{{ 'app.configure' | trans }}</a>
                                            </div>
                                        </div>
                                    </div>
                                </span>
                            </div>
                            <div class="col-sm-12 row">
                                <hr>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
    </div>
</ul>

{% endblock %}
{% block footer %}
    <!-- Start of footer area -->
    {% include '/client/statics/footer.html.twig' %}
    <!-- End of footer area -->
{% endblock %}
