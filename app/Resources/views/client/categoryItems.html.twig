{% block head %}
    <!-- Header area -->
    {% include 'client/statics/header.html.twig' %}
    <!-- End of header area -->
{% endblock %}
{% block subnenu %}
    <!-- subnav here -->
    {% if aCategories is not null %}
        <div class="navbar navbar-default  opaque-navbar">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navMain">
                        <span class="glyphicon glyphicon-chevron-right" style="color:white;"></span>

                    </button>
                </div>
                <div class="collapse navbar-collapse" id="navMain">
                    <ul class="nav navbar-nav pull-left">
                        {#<li><a href="{{ path('_allArticles') }}">{% trans %}app.all.products{% endtrans %}</a></li>#}
                        {% for oCategory in aCategories %}
                            <li><a  href="{{ path('_allCategoryItems', {'id': oCategory.id, 'name' : oCategory.name }) }}">{{ oCategory.name }}</a></li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    {% endif %}

{% endblock %}
{% block content %}
    <ul class="list-inline">
        <div class="single-product-area">
            <div class="zigzag-bottom"></div>
            <div class="container">
                <div class="row">
                    {% if aTables is not null %}
                        {% include 'client/subContent/allTables.html.twig' %}
                    {% endif %}
                    {% if aArticles is not null %}
                        {% include 'client/subContent/allArticles.html.twig' %}
                    {% endif %}
                </div>
            </div>
        </div>
    </ul>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('bundles/app/js/mouseOverProductName.js') }}" type="text/javascript"></script>
{% endblock %}
{% block footer %}
    <!-- Start of footer area -->
    {% include '/client/statics/footer.html.twig' %}
    <!-- End of footer area -->
{% endblock %}
