<ul class="nav navbar-nav navbar-right">
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">{{ 'app.language'|trans }}</a>
        <ul class="dropdown-menu" role="menu">
            {% for locale in locales %}
                {% if locale.locale!="admin" %}
                    <li{% if current_locale == locale.locale %} class="locale_current"{% endif %}>
                        <a href="{{ locale.link }}" title="{{ locale.locale_current_language }}">
                            <div class="row">
                                <div class="sm-col-3"><img
                                            src={{ ('bundles/app/img/flags/' ~ locale.locale ~ '.png') |  imagine_filter('flag') }}>
                                </div>
                                <div class="sm-col-9"><p>{{ locale.locale_current_language }}</p></div>
                            </div>
                        </a>
                    </li>
                {% endif %}
            {% endfor %}
        </ul>
    </li>
</ul>

