<ul class="nav navbar-nav navbar-right">
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Language</a>
        <ul class="dropdown-menu" role="menu">
            {% for locale in locales %}
                {% if locale.locale!="admin" %}
                    <li{% if current_locale == locale.locale %} class="locale_current"{% endif %}>
                            <a href="{{ locale.link }}" title="{{ locale.locale_current_language }}">
                              <span>
                                  <img src={{ ('bundles/app/img/flags/' ~ locale.locale ~ '.png') |  imagine_filter('flag') }}>
                                  </span>
                                  {{ locale.locale_current_language }}
                            </a>
                    </li>
                {% endif %}
            {% endfor %}
        </ul>
    </li>
</ul>

