<p>Switch to :</p>
<ul class="locale_chooser">
    {% for locale in locales %}
        {% if locale.locale!="admin" %}
            <li{% if current_locale == locale.locale %} class="locale_current"{% endif %}>
                <a href="{{ locale.link }}" title="{{ locale.locale_current_language }}">{{ locale.locale_current_language }}</a></li>
        {% endif %}
    {% endfor %}
</ul>
