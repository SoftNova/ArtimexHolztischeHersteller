{% extends "form_div_layout.html.twig" %}

{%- block choice_widget_expanded -%}
<div {{ block('widget_container_attributes') }}>
    {%- for child in form %}
            <div class="col-xs-12">
                {{- form_widget(child) -}}
                {{- form_label(child, null, {translation_domain: choice_translation_domain}) -}}
                <div class="hidden-tooltip">
                    <p>
                    {% if loop.index == 1  %}
                        {{ 'app.on.delivery.info' | trans }}
                    {% elseif loop.index==2 %}
                        {{ 'app.on.downpayment.info' | trans }}
                    {% endif %}
                    </p>
                </div>
            </div>
        {% if loop.index==1 %}

        {% endif %}
        {% if not loop.last %}
            <div class="col-xs-12">
                <hr>
            </div>
        {% endif %}
    {% endfor -%}
</div>
{%- endblock choice_widget_expanded -%}